{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {}
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
